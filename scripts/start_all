#!/bin/zsh

# Start all learning-app services in separate tmux sessions
# This allows attaching to each independently for easier debugging

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

# Start backend in its own tmux session
"$SCRIPT_DIR/start_backend" --tmux

# Start frontend in its own tmux session
"$SCRIPT_DIR/start_frontend" --tmux

echo ""
echo "âœ… Started learning-app services in separate sessions"
echo "   Backend:  tmux attach -t learning-backend"
echo "   Frontend: tmux attach -t learning-frontend"
echo ""
echo "   List sessions: tmux ls"
echo "   Kill all:      ./scripts/stop_all"

RECALL_DATABASE_URL=postgresql://localhost:5432/recall
RECALL_REPHRASE_QUESTIONS=false

# LLM provider: "gemini", "openai", or "ollama"
RECALL_LLM_PROVIDER=gemini

# Gemini (cloud — default)
RECALL_GEMINI_API_KEY=your-gemini-key-here
RECALL_GEMINI_MODEL=gemini-2.0-flash

# OpenAI (cloud) — only needed if RECALL_LLM_PROVIDER=openai
RECALL_OPENAI_API_KEY=sk-your-key-here
RECALL_OPENAI_MODEL=gpt-4o-mini

# Ollama (local) — only needed if RECALL_LLM_PROVIDER=ollama
RECALL_OLLAMA_BASE_URL=http://localhost:11434/v1
RECALL_OLLAMA_MODEL=llama3

